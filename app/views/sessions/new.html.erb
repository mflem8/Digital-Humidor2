<h1>Login!</h1>

<p><%= flash[:error] %></p>

<%= form_for(:user) do |f| %>
    <div>
        <%= f.label :username, 'Username:' %>
        <%= f.text_field :username %>
    </div><br>

    <div>
        <%= f.label :password, 'Password:' %>
        <%= f.password_field :password %>
    </div><br>
    <%= f.submit "Log In" %>
<% end %>